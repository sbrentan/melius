<%- include('common/header.ejs') %>
        <title>Modifica Copia</title>
    </head>
    <body onload="setheader(); getCopyDetails('<%= copy %>')">
        <div><%- include('common/back.ejs') %></div>
        <br>
        <center>
            <h2 id="divtitle">Modifica copia</h2>
            <label for="copy_id" id="lbl_copy_id"><b>ID: <b></label><input class="inputField" name="copy_id" id="copy_id" placeholder="ID" readonly><br>
            <label for="book"><b>Libro: </b></label><select class="inputField" name="book" id="book" placeholder="Libro" required></select><br>
            <label for="owner"><b>Proprietrio: </b></label><select class="inputField" name="owner" id="owner" required></select><br>
            <label for="price"><b>Prezzo: <b></label><input class="inputField" name="price" id="price" placeholder="Prezzo" required><br>
            <div style="width: 30%; margin: auto; margin-top: 10px;">
                <button class="button"  id="confbutton" name="adminonly" onclick="insertCopy('<%= copy %>')">Modifica</button>
                <button class="delete" id="delbutton" name="adminonly" onclick="purgeCopy('<%= copy %>')">Elimina</button>
            </div>
        </center>
  </body>
</html>
