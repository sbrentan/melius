<%- include('common/header.ejs') %>
        <title>Edit Copy</title>
    </head>
    <body onload="fillCopyEdit('<%= copy %>'); setheader()">
        <div><a href="/ui/dashboard"><%- include('common/back.ejs') %></a></div>
        <br>
        <center>
            <h2>Modifica copia</h2>
            <label for="book"><b>Libro: </b></label><input class="inputField" type="text" name="book" id="book" placeholder="Libro" required><br>
            <label for="owner"><b>Proprietario: </b><input class="inputField" type="text" name="owner" id="owner" placeholder="Proprietario" required><br>
            <label for="buyer"><b>Acquirente: </b><input class="inputField" type="text" name="buyer" id="buyer" placeholder="Acquirente" required><br>
            <label for="price"><b>Prezzo: </b><input class="inputField" type="text" name="price" id="price" placeholder="Prezzo" required><br>
            <div style="width: 30%; margin: auto; margin-top: 10px;">
                <button class="button" type="button" name="adminonly" onclick="updateCopy('<%= copy %>')">Modifica</button>
                <button class="delete" name="adminonly" onclick="purgeCopy('<%= copy %>')">Elimina</button>
            </div>
        </center>
  </body>
</html>
