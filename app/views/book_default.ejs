            <a href="/ui/books"><%- include('common/back.ejs') %></a>
        </div>
        <br>
        <center>
            <label for="title"><b>Titolo: </b></label><input class="inputField" type="text" name="title" id="title" placeholder="Titolo" readonly><br>
