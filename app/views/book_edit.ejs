<%- include('common/header.ejs') %>
        <title>Modifica Libro</title>
    </head>
    <body onload="fillBookEdit('<%= book %>'); setheader()">
        <div><a href="/ui/dashboard"><button class="fa fa-arrow-left" style="font-size: 20px;"> Indietro</button></a></div>
        <br>
        <center>
            <h2>Modifica libro</h2>
            <label for="title"><b>Titolo: </b></label><input class="inputField" type="text" name="title" id="title" placeholder="Titolo" required><br>
            <label for="description"><b>Descrizione: </b></label><input class="inputField" type="text" name="description" id="description" placeholder="Descrizione" required><br>
            <label for="Autore"><b>Autore: </b></label><input class="inputField" type="text" name="author" id="author" placeholder="Autore" required><br>
            <div style="width: 30%; margin: auto; margin-top: 10px;">
                <button class="button" type="button" name="adminonly" style="margin: 0 10px;" onclick="updateBook('<%= book %>')">Modifica</button>
                <button class="delete" name="adminonly" style="margin: 0 10px;" onclick="purgeBook('<%= book %>')">Elimina</button>
            </div>
        </center>
  </body>
</html>
